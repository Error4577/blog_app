<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  </head>

  <body>
    <nav class="#455a64 blue-grey darken-2">
      <div class="nav-wrapper container">
        <a href="/" class="brand-logo">Bloooooooog</a>
        <% if user_signed_in? %>
          <div class="user_nav grid-6 right">
            <a href="/users/<%= current_user.id %>" class="waves-effect waves-light btn">マイページ</a>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "waves-effect waves-light btn" %>
            <a class="post waves-effect waves-light btn" href="/posts/new">投稿する</a>
          </div>
        <% else %>
          <div class="right grid-6">
            <%= link_to "ログイン", new_user_session_path, class: 'post waves-effect waves-light btn' %>
            <%= link_to "新規登録", new_user_registration_path, class: 'post waves-effect waves-light btn' %>
          </div>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
